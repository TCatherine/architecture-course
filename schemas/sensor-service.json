          "type": {
            "type": "string",
            "enum": [
              "DEVICE_COMMAND",
              "NOTIFICATION"
            ]
          },
          "command": {
            "type": "string",
            "example": "turn_on"
          },
          "payload": {
            "type": "object",
            "description": "Параметры команды, e.g., {\"temperature\": 22}",
